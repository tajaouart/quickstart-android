<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.firebase.quickstart.neverAnswered">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.google.firebase.quickstart.neverAnswered.EntryChoiceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.aylan.neverAnswered.java.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />



        <activity android:name="com.aylan.neverAnswered.java.SignInActivity" />


        <activity android:name="com.aylan.neverAnswered.java.NewPostActivity" />


        <activity android:name="com.aylan.neverAnswered.java.PostDetailActivity" />

    </application>

</manifest>
